<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".KotlinLeakActivity">

    <Button
        android:id="@+id/button_leak_in_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_to_leak"
        app:layout_constraintBottom_toTopOf="@id/button_close_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_close_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_to_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_leak_in_fragment" />


</androidx.constraintlayout.widget.ConstraintLayout>